{
  "compilerOptions": {
    /* alvo */
    "target": "ES2019",

    /* ESSENCIAL â”€ acaba com TS2835, TS1543, TS17004 */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    /* Qualidade / ergonomia */
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,

    /* types globais */
    "types": ["node"]
  },
  "include": [
    "src",
    "vite.config.ts",
    "eslint.config.js",
    "src/types"
  ]
}
